@model CreateCategoryViewModel
@{
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Delete category</h2>

                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger">
                                    <strong>Error! </strong> @TempData["Error"]
                                </div>
                            }
                            <form id="categoryCreation" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Name">Category Name</label>
                                    <input id="form3Example3cg" class="form-control form-control-lg" autocomplete="username" aria-required="true" asp-for="@Model.Name" />
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                        <button id="categoryCreation" type="submit" class="btn btn-primary btn-danger btn-block btn-lg gradient-custom-4 text-body">Delete Category</button>
                                </div>
                                

                            </form>
                            <div class="list-group mt-3">
                                <a class="list-group-item list-group-item-action active">Categories</a>
                                @foreach(var category in Model.Categories)
                                {
                                    <a class="list-group-item list-group-item-action">@category.Name</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
