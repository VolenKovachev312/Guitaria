@model ProductViewModel
@{
    <div class="mask d-flex align-items-center h-100 gradient-custom-3 mt-5">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Edit Category</h2>

                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger mt-3">
                                     @TempData["Error"]
                                </div>
                            }
                            <form id="categoryCreation" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Name">Category Name</label>
                                    <input id="form3Example3cg" class="form-control form-control-lg" asp-for="@Model.Name" />
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.ImageUrl">Image URL</label>
                                    <input class="form-control form-control-lg" asp-for="@Model.ImageUrl" />
                                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Description" class="form-label">Description</label>
                                    <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Price" class="form-label">Price</label>
                                    <input asp-for="@Model.Price" class="form-control"/>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.IsAvailable" class="form-label">Availability</label>
                                    <select asp-for="@Model.IsAvailable" class="form-control" style="border-color:aquamarine">
                                        <option value="@true" >Available</option>
                                        <option value="@false">Unavailable</option>
                                    </select>
                                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button id="categoryEdit" type="submit" class="btn btn-primary btn-success btn-block btn-lg gradient-custom-4 text-body">Save Changes</button>
                                </div>
                                
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
