<div class="text-center row">
    
    @foreach (var product in Model)
    {
        <div class="card" style="width: 18rem; margin-top: 25px; margin-left: 15px;">
            <img class="card-img-top" style="width: 100%; height: 18rem; margin-top:15px" src="@product.ImageUrl" alt="Card image cap">
            <hr>
            <div class="card-body">
                <center><font size="+2"><p class="card-text mb-3">@product.Name</p></font></center>
                <center><font><p class="card-text mb-3">@product.Price</p></font></center>
            </div>
            @if (User.IsInRole("Administrator"))
            {
                <form asp-action="Edit" asp-controller="Product" method="get">
                    <button name="productName" value="@product.Name" class="btn-dark mb-3">
                        Edit
                    </button>
                </form>
            }
        </div>

    }
    
</div>