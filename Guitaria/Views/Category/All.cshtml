@model IEnumerable<CategoryViewModel>

<div class="text-center row">
    @foreach (var category in Model)
    {
        <div class="card" style="width: 18rem; margin-top: 25px; margin-left: 15px;">
            <img class="card-img-top" style="width: 100%; height: 18rem; margin-top:15px" src="@category.ImageUrl" alt="Card image cap">
            <hr>
            <div class="card-body">
                <center><font size="+2"><p class="card-text mb-3">@category.Name.ToUpper()</p></font></center>
            </div>
            @if(User.IsInRole("Administrator"))
            {
                <button>

                </button>
            }
        </div>

    }
</div>

