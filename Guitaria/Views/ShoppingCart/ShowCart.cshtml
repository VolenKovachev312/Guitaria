@model ShoppingCartViewModel
    
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-8 col-lg-12">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success mt-3">
                        <strong>Success! </strong> @TempData["Success"]
                    </div>
                }
                @{
                     decimal totalPrice = 0;
                 }
            @if (Model.Products.Count == 0)
            {
                <h2 class="mt-3">No Products in Shopping Cart</h2>
            }
            else
            {
                <ul class="list-group gap-3 mt-3">
                    @foreach (var item in Model.Products)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <div class="image-parent" style="width:12rem; height:12rem">
                                <img style="width:12rem; height:12rem" src="@item.Key.ImageUrl" alt="@item.Key.Name">
                            </div>
                            <div style="max-width:16rem">
                                <font size="+2" style="font-family: 'Courier New', monospace; overflow-wrap: break-word;"><p>@item.Key.Name</p></font>
                            </div>
                            @{
                                totalPrice += item.Key.Price;
                             }
                            <br>
                            <font size="+2" style="font-family: 'Courier New', monospace;" class="col-7"><p>@item.Key.Price$</p></font>
                            <div class="" style="width:2rem; height:2rem">
                                <form asp-action="RemoveFromCart" asp-controller="ShoppingCart" method="get">
                                    <button class="btn" name="productId" value="@item.Key.Id">
                                        <img style="width:2rem; height:2rem" src="https://cdn-icons-png.flaticon.com/512/1828/1828843.png">
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            }
            </div>
        </div>
    </div>
    <hr />
    @if(Model.Products.Count>0)
    {
        <center>
        <font size="+3"><p>
            TOTAL PRICE: @totalPrice$
        </p></font>
    <div style="display: inline-block;">
        
            <button class="btn btn-check">
                <form asp-action="Checkout" asp-controller="ShoppingCart">
                    <button class="btn-success">
                        <font size="+2">Checkout</font>
                    </button> 
                </form>
            </button>
        <button class="btn btn-check">
                <form asp-action="ClearCart" asp-controller="ShoppingCart">
                    <button class="btn-danger">
                        <font size="+2">Clear Shopping Cart</font>
                    </button>
                </form>
        </button>
        
    </div>
    </center>
    }
