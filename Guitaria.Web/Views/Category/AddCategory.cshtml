@model CreateCategoryViewModel
@{
    <div class="mask d-flex align-items-center h-100 gradient-custom-3 mt-5">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card border-2" style="border-radius: 15px; border-color:aquamarine">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create a Category</h2>

                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger mt-3">
                                        @TempData["Error"]
                                    </div>
                                }
                                <form id="categoryCreation" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.Name">Category Name</label>
                                    <input id="form3Example3cg" class="form-control form-control-lg" asp-for="@Model.Name" style="border-color:aquamarine" />
                                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.ImageUrl">Image URL</label>
                                    <input class="form-control form-control-lg" asp-for="@Model.ImageUrl" style="border-color:aquamarine" />
                                        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button id="categoryCreation" type="submit" class="btn btn-primary btn-success btn-block btn-lg gradient-custom-4 text-body">Create Category</button>
                                    </div>

                                </form>
                                <div class="list-group mt-3" style="border-color:aquamarine">
                                    <a class="list-group-item list-group-item-action active" >Categories</a>
                                @if (Model.Categories.Any() == false)
                                {
                                    <a class="list-group-item list-group-item-action"style="border-color:aquamarine">No Categories Available</a>
                                }
                                else
                                {
                                    foreach (var category in Model.Categories)
                                    {
                                        <a class="list-group-item list-group-item-action"style="border-color:aquamarine">@category.Name - @category.Products.Count() products</a>
                                    }
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
}
